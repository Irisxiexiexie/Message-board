<p id="notice"><%= notice %></p>

<h1>SAY WHAT YOU WANT TO SAY!</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
      
        <td><%= topic.title %></td>
          <td><%= topic.description %></td>
        
      <td><%= link_to 'Modify the message', edit_topic_path(topic) %></td>
        <td><%= link_to 'Delete the message', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

